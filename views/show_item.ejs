<% layout('layout') -%>
<div
  class="
    max-w-screen-md
    mx-auto
    mt-24
    flex
    flex-col
    sm:flex-row
    items-start
    bg-gray-900
    overflow-hidden
  "
>
  <img
    src="/images/<%= item.filename || 'placeholder-image.jpeg' %>"
    alt="<%= (typeof item.filename !== 'undefined') ? item.name : 'No image available' %>"
    class="w-full max-w-60 object-cover h-70vh"
  />
  <div class="w-full pl-7 pr-4 mt-8 sm:mt-0">
    <div class="flex justify-between items-center gap-5">
      <p class="text-red-600 text-2xl pb-2"><%= item.name %></p>
      <a href="<%= item.url + '/update' %>" class="text-blue-500 hover:text-blue-300">Edit</a>
    </div>
    <p class="text-white text"><%= item.brand.name %></p>
    <p class="mt-3 leading-relaxed text-sm"><%= item.description %></p>
    <p class="mt-3 text-red-600">Price: $<%= item.price %></p>
    <p class="text-gray-400">Stock: <%= item.stock %></p>
  </div>
</div>

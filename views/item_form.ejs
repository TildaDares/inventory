<% layout('layout') -%>
<section class="flex justify-center items-center flex-col mt-8">
  <h2 class="text-center text-xl text-blue-500"><%= title %></h2>
  <% if (typeof errors !== 'undefined') { %>
  <ul>
    <% for (const err in errors) { %>
    <li>err.msg</li>
    <% } %>
  </ul>
  <% } %>
  <form
    class="
      border border-gray-200
      flex flex-col
      rounded
      p-4
      leading-loose
      mt-8
      w-full
      max-w-md
    "
    method="POST"
    action=""
  >
    <label for="name" class="text-blue-500">Name</label>
    <input
      class="
        border border-gray-800
        rounded
        bg-gray-800
        focus:outline-none focus:border-blue-900
        px-3
      "
      type="text"
      required
      id="name"
      value="<%= typeof item === 'undefined' ? '' : item.name %>"
      name="name"
    />
    <label for="description" class="pt-3 text-blue-500">Description</label>
    <textarea 
      name="description" 
      id="description" 
      class="
        border border-gray-800
        rounded
        px-2
        text-sm
        bg-gray-800
        focus:outline-none focus:border-blue-900
        "
    ><%= typeof item === 'undefined' ? '' : item.description %></textarea>
    <label for="category" class="pt-3 text-blue-500">Category</label>
    <select
      name="category"
      id="category"
      class="
        border border-gray-800
        rounded
        bg-gray-800
        focus:outline-none focus:border-blue-900
        p-3
      "
    >
      <% for (const category of categories) { %>
        <% if(typeof item !== 'undefined') { %>
          <option
            value="<%= category.id %>"
            <%= category._id.toString() === item.category._id.toString() ? 'selected' : '' %>
          >
            <%= category.name %>
          </option>
        <% } else { %>
          <option
            value="<%= category.id %>"
          >
            <%= category.name %>
          </option>
        <% } %>
      <% } %>
    </select>
    <label for="brand" class="pt-3 text-blue-500">Brand</label>
    <select
      id="brand"
      name="brand"
      class="
        border border-gray-800
        rounded
        bg-gray-800
        focus:outline-none focus:border-blue-900
        p-3
      "
    >
      <% for (const brand of brands) { %>
        <% if(typeof item !== 'undefined') { %>
          <option
            value="<%= brand.id %>"
            <%= brand._id.toString() === item.brand._id.toString() ? 'selected' : '' %>
          >
            <%= brand.name %>
          </option>
        <% } else { %>
          <<option value="<%= brand.id %>"><%= brand.name %></option>
        <% } %>
      <% } %>
    </select>
    <label for="price" class="pt-3 text-blue-500">Price ($)</label>
    <input
      id="price"
      name="price"
      type="number"
      min="0"
      value="<%= typeof item === 'undefined' ? '0' : item.price %>"
      required
      max="1000000"
      class="
        border border-gray-800
        rounded
        bg-gray-800
        focus:outline-none focus:border-blue-900
        px-3
      "
    />
    <label for="stock" min="0" max="100000" class="pt-3 text-blue-500"
      >Stock</label
    >
    <input
      id="stock"
      name="stock"
      type="number"
      required
      value="<%= typeof item === 'undefined' ? '0' : item.stock %>"
      class="
        border border-gray-800
        rounded
        bg-gray-800
        focus:outline-none focus:border-blue-900
        px-3
      "
    />
    <div class="mt-5">
      <button
        type="submit"
        name="submit"
        class="bg-blue-500 rounded p-2 float-right text-sm"
      >
        Submit
      </button>
      <% if(title === 'Edit Form') { %>
        <button
          type="button"
          name="delete"
          class="bg-red-500 rounded p-2 float-left text-sm"
        >
          Delete Item
        </button>
      <% } %>
    </div>
  </form>
</section>

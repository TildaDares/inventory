<% layout('layout') -%>
<section class="flex justify-center items-center flex-col mt-8 max-w-3xl w-full">
  <h2 class="text-center text-xl text-blue-500"><%= title %></h2>
  <% if (typeof errors !== 'undefined') { %>
  <ul>
    <% for (const err of errors) { %>
    <li><%= err.msg %></li>
    <% } %>
  </ul>
  <% } %>
  <form
    class="
      border border-gray-200
      flex flex-col
      rounded
      p-4
      leading-loose
      mt-8
      w-full
      max-w-md
    "
    method="POST"
    action=""
  >
    <label for="name" class="text-blue-500">Name</label>
    <input
      class="
        border border-gray-800
        rounded
        bg-gray-800
        focus:outline-none focus:border-blue-900
        px-3
      "
      type="text"
      required
      id="name"
      value="<%= typeof arg === 'undefined' ? '' : arg.name %>"
      name="name"
    />
    <div class="mt-5">
      <button
        type="submit"
        name="submit"
        class="bg-blue-500 rounded p-2 float-right text-sm"
      >
        Submit
      </button>
    </div>
  </form>
</section>

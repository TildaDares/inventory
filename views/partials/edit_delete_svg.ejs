<details class="inline relative">
  <summary class="ml-3 border border-blue-500 rounded-full h-6 w-6 inline-flex items-center justify-center">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
      <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"/>
    </svg>
  </summary>

  <ul class="list-none flex flex-col px-4 py-5 gap-3 bg-white text-black text-sm absolute rounded mt-3" style="right: 40px; width: max-content">
    <li class="hover:text-blue-500"><a href="<%= editLink %>"><%= 'Edit ' + title %></a></li>
    <% if(items.length == 0) { %>
      <li>
        <form action="<%= delLink %>" method="POST" class="w-full max-w-md">
          <button class="w-full border border-red-500 text-red-500 rounded p-2 float-left text-sm" onclick="return confirm('Are you sure you want to delete this <%= title.toLowerCase() %>?');"><%= 'Delete ' + title %></button>
        </form>
      </li>
    <% } %>
  </ul>
</details>